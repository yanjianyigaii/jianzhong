<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/carousel.css" rel="stylesheet" />
    <style>
        .navbar-inverse{
            background-color:#ff7b29;
            border-color: #fff;
        }
        .navbar-inverse .navbar-brand{
            color:#fff;
            
        }
        .navbar-inverse .navbar-nav > li > a{
            color:#fff;
        }
        .cookingbook-img-col6{
            width:100%;
            height:400px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top cookingboo-navbar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                <a class="navbar-brand" href="/home/index">Cooking Book</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/home/index">Home</a></li>
                    <li><a href="/home/recipe">Recipe</a></li>
                    <li><a href="/home/gallery">Gallery</a></li>
                    <li><a href="/home/contact">Contact</a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - Jian Zhong</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
